  <requires>
    <import addon="xbmc.addon" version="19.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository" name="Aurion Repository">
    <dir>
      <info compressed="false">https://outrageousbean.github.io/Aurion/addons.xml</info>
